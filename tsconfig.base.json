{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022",
    "types": ["jest", "node"],
    "useDefineForClassFields": true,
    "paths": {
      "@code-like-a-carpenter/*": ["./packages/@code-like-a-carpenter/*"]
    }
  }
}
