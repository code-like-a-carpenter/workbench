{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/types",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022", // Node 18.0.0 and later
    "types": [
      "node"
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.js",
    "*.jsx",
    "packages/*/*/src/**/*.js",
    "packages/*/*/src/**/*.jsx",
    "packages/*/*/src/**/*.ts",
    "packages/*/*/src/**/*.tsx",
  ]
}
