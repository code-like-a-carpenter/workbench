{
  "name": "@code-like-a-carpenter/workbench",
  "version": "0.0.0-development",
  "description": "Monorepo of common libraries, CLIs, and codegen tools",
  "scripts": {
    "eslint": "eslint ${ESLINT_FORMAT_OPTIONS:-} --ignore-path .gitignore ",
    "lint": "npm-run-all --continue-on-error --parallel lint:*",
    "lint:changelog": "commitlint --from origin/main --to HEAD",
    "lint:es": "npm run --silent eslint -- .",
    "prelint:types": "mkdir --parents reports/style",
    "lint:types": "bash -c \"tsc $TSC_OPTIONS\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "keywords": [],
  "author": "Ian Remmel <1182361+ianwremmel@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@ianwremmel/eslint-plugin-ianwremmel": "^6.2.0",
    "@nrwl/nx-cloud": "^15.0.3",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "esbuild": "^0.17.6",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-workspaces": "^0.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "nx": "^15.6.3",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.js": "npm run eslint -- ",
    "*.jsx": "npm run eslint -- ",
    "*.ts": "npm run eslint -- ",
    "*.tsx": "npm run eslint -- ",
    "bin/**": "npm run eslint -- "
  },
  "workspaces": [
    "packages/*/*"
  ],
  "private": true
}
