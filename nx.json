{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "namedInputs": {
    "dist": ["{projectRoot}/dist/**/*"],
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals",
      "!{projectRoot}/dist/**/*"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.nx-cache-buster",
      "{workspaceRoot}/tsconfig.*.json",
      "{workspaceRoot}/packages/@code-like-a-carpenter/nx-auto/**/*"
    ]
  },
  "plugins": ["@code-like-a-carpenter/nx-auto"],
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["default", "^dist"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "build-cjs",
          "build-esm",
          "build-openapi",
          "build-package",
          "build-project-refs",
          "build-readme",
          "build-types"
        ]
      }
    }
  },
  "npmScope": "code-like-a-carpenter"
}
